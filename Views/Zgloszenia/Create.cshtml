@model Zgloszenie

@{
    ViewData["Title"] = "Create Zgłoszenie";
}

<h2>Dodaj nowe zgłoszenie</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Tytul" class="control-label"></label>
        <input asp-for="Tytul" class="form-control" />
        <span asp-validation-for="Tytul" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opis" class="control-label"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Priorytet" class="control-label"></label>
        <select asp-for="Priorytet" class="form-control">
            <option value="Niski">Niski</option>
            <option value="Średni">Średni</option>
            <option value="Wysoki">Wysoki</option>
        </select>
        <span asp-validation-for="Priorytet" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Dodaj zgłoszenie</button>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}